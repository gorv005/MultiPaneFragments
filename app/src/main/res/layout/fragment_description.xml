<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/cream"
    android:paddingLeft="25dp"
    android:orientation="vertical"
    android:paddingRight="25dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

<android_kaizen.com.multipanefragments.CustomTextView
    custom:typeface="RobotoSlab-Regular.ttf"
    android:text="@string/home"
    android:textSize="14sp"
    android:textColor="@color/grey"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Regular.ttf"
                android:layout_marginLeft="5dp"
                android:textColor="@color/orange"
                android:textAllCaps="true"
                android:text="@string/Techer_Attendance"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Regular.ttf"
                android:text="@string/from"
                android:textColor="@color/blue1"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Bold.ttf"
                android:layout_marginLeft="5dp"
                android:textAllCaps="true"
                android:text="@string/oct"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Regular.ttf"
                android:layout_marginLeft="5dp"
                    android:textColor="@color/blue1"
                android:textAllCaps="true"
                android:text="@string/to"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Bold.ttf"
                android:layout_marginLeft="5dp"
                android:textColor="@color/orange"
                android:textAllCaps="true"
                android:text="@string/oct1"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Regular.ttf"
                android:textColor="@color/blue1"
                android:layout_marginLeft="5dp"
                android:textAllCaps="true"
                android:text="@string/_2017"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="@color/blue1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android_kaizen.com.multipanefragments.CustomTextView
        custom:typeface="RobotoSlab-Bold.ttf"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue1"
        android:textSize="18sp"
        android:singleLine="true"
        android:text="@string/mark_attandance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

