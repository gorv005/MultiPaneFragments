    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/present_popup"
                    android:text="P"
                    android:textColor="@color/white" />


            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/circle_green"
                android:text="Present"
                android:textColor="@color/blue1"
                android:textSize="14sp" />



                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/absent_popup"
                    android:text="A"
                    android:textColor="@color/white" />


            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"

                android:src="@drawable/circle_green"
                android:text="Absent"
                android:textColor="@color/blue1"
                android:textSize="14sp" />



                <ImageView
                    android:layout_marginLeft="10dp"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:text="L"
                    android:src="@drawable/leave_popup"
                    android:textColor="@color/white" />


            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Regular.ttf"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/circle_green"
                android:text="Leave"
                android:textColor="@color/blue1" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/circle_green"
                android:text="Add Teacher"
                android:textColor="@color/blue1"
                android:textSize="14sp" />



            <View
                android:layout_width="1dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:background="@color/blue1" />


            <android_kaizen.com.multipanefragments.CustomTextView
                custom:typeface="RobotoSlab-Regular.ttf"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/circle_green"
                android:text="Save"

                android:textColor="@color/blue1" />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:visibility="gone"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_weight="5"
        android:background="@color/white">
        <View
            android:visibility="gone"
            android:background="@color/grey"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <android_kaizen.com.multipanefragments.CustomTextView
            custom:typeface="RobotoSlab-Regular.ttf"
 android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sl. No"
            android:id="@+id/txtView_RN_Student_Daily_Attendance"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            />

        <View
            android:background="@color/grey"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <android_kaizen.com.multipanefragments.CustomTextView
            custom:typeface="RobotoSlab-Regular.ttf"
            android:id="@+id/txtView_StudentId_Student_Daily_Attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="Teacher Name"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:textColor="@color/orange"
            android:textIsSelectable="false"

            android:textSize="14sp"
            />
        <View
            android:background="@color/grey"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>


        <android_kaizen.com.multipanefragments.CustomTextView
            custom:typeface="RobotoSlab-Regular.ttf"
            android:id="@+id/txtView_Student_Name_Student_Daily_Attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Gender"
            android:textColor="@color/orange"
            android:textSize="14sp" />

        <View
            android:background="@color/grey"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <android_kaizen.com.multipanefragments.CustomTextView
            custom:typeface="RobotoSlab-Regular.ttf"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance"
            android:id="@+id/txtView_Student_Gender_Student_Daily_Attendance"
            android:textSize="14sp"
            android:visibility="gone"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:layout_marginLeft="120dp" />


        <android_kaizen.com.multipanefragments.CustomTextView
            custom:typeface="RobotoSlab-Regular.ttf"

            android:id="@+id/txtView_Student_Attendance_Student_Daily_Attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:fontFamily="serif"
            android:gravity="center"
            android:singleLine="true"
            android:text="Attendance"
            android:textColor="@color/orange"

            android:textSize="14sp" />

        <View
            android:background="@color/grey"
            android:layout_width="1dp"
            android:visibility="gone"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>
    <ListView
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_student_daily_attendance_listView"
        />
</LinearLayout>